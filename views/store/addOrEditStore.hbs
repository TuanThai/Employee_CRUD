<h3>{{viewTitle}}</h3>
<form action="/store" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{store._id}}">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="name" value="{{store.name}}" placeholder="Name">
    </div>
    <div class="form-group">
        <label>Address</label>
        <input type="text" class="form-control" name="address" value="{{store.address}}" placeholder="Address">
    </div>
    <div class="form-group md-6">
        <label>Telephone</label>
        <input type="text" name="telephone" placeholder="Telephone" value="{{store.telephone}}" class="form-control">
        <br />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i>Submit</button>
        <a href="/store/listStore" class="btn btn-danger">
            <i class="fa fa-list-alt"></i>View All
        </a>
    </div>
</form>